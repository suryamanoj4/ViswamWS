---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import Features from '~/components/widgets/Features.astro';
import Stats from '~/components/widgets/Stats.astro';

const metadata = {
  title: 'About VISWAM.ai',
  description: 'Pioneering AI Solutions for the Global South',
};

// Journey timeline data
const journeyItems = [
  {
    year: '2004',
    title: 'Swecha Foundation',
    description: 'Launch of Swecha, the first Telugu OS, marking our commitment to localized technology solutions',
  },
  {
    year: '2014',
    title: 'BalaSwecha Initiative',
    description: 'Development of educational software ecosystem, training over 500 teachers',
  },
  {
    year: '2020',
    title: 'AI Initiative Launch',
    description: 'Beginning of our focused AI development for the Global South',
  },
  {
    year: '2023',
    title: 'VISWAM.ai Establishment',
    description: 'Formation of the Centre of Excellence on AI for the Global South',
  },
];

const leadershipTeam = [
  {
    initials: 'YK',
    name: 'Y Kiran Chandra',
    role: 'Centre Director',
  },
  {
    initials: 'PJ',
    name: 'Prof PJ Narayanan',
    role: 'Research Director',
  },
  {
    initials: 'JR',
    name: 'Jayesh Ranjan',
    role: 'Advisory Board',
  },
];

const focusAreas = [
  {
    title: 'Language & Culture',
    description: 'Preserving and promoting linguistic diversity through AI',
    icon: 'tabler:language',
  },
  {
    title: 'Education',
    description: 'AI-powered learning solutions for diverse communities',
    icon: 'tabler:school',
  },
  {
    title: 'Agriculture',
    description: 'Smart farming solutions for small-scale farmers',
    icon: 'tabler:plant',
  },
  {
    title: 'Healthcare',
    description: 'Accessible healthcare solutions through AI',
    icon: 'tabler:activity',
  },
];
---

<Layout metadata={metadata}>
  <!-- Hero -->
  <Hero
    tagline="<p><u>V</u>enture for <u>I</u>nnovation and <u>S</u>ocial <u>W</u>ellbeing through <u>A</u>I for the <u>M</u>arginalised</p>"
    title="Pioneering AI Solutions for the Global South"
  >
    <Fragment slot="subtitle">
      A group of open source enthusiasts, community builders, technologists and researchers working 
      towards tech for social good. We bring together expertise from research institutions, industry partners, 
      and community organizations to create innovative AI solutions for the Global South.
    </Fragment>
  </Hero>

  <!-- Journey Timeline -->
  <div class="max-w-6xl mx-auto px-4 py-16 lg:px-8">
    <h2 class="text-3xl font-bold mb-8 text-center">Our Journey</h2>
    <div class="space-y-8">
      {journeyItems.map(item => (
        <div class="flex gap-4 items-start">
          <div class="text-primary font-bold text-lg w-24">{item.year}</div>
          <div>
            <h3 class="font-bold text-xl mb-2">{item.title}</h3>
            <p class="text-muted">{item.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>

  <!-- Leadership -->
  <div class="bg-blue-50 dark:bg-slate-800 py-16">
    <div class="max-w-6xl mx-auto px-4 lg:px-8">
      <h2 class="text-3xl font-bold mb-8 text-center">Our Leadership</h2>
      <div class="grid md:grid-cols-3 gap-8">
        {leadershipTeam.map(leader => (
          <div class="bg-white dark:bg-slate-900 rounded-lg p-6 text-center">
            <div class="w-16 h-16 bg-primary text-white rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-4">
              {leader.initials}
            </div>
            <h3 class="font-bold text-xl mb-2">{leader.name}</h3>
            <p class="text-muted">{leader.role}</p>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Key Achievements -->
  <div class="max-w-6xl mx-auto px-4 py-16 lg:px-8">
    <h2 class="text-3xl font-bold mb-8 text-center">Key Achievements</h2>
    <div class="grid md:grid-cols-3 gap-8">
      <div class="text-center">
        <div class="text-4xl font-bold text-primary mb-2">G</div>
        <h3 class="font-bold mb-2">Gonthuka</h3>
        <p class="text-muted">Telugu ASR system with 1.5 Million voice samples and 45,000+ contributors</p>
      </div>
      <div class="text-center">
        <div class="text-4xl font-bold text-primary mb-2">A</div>
        <h3 class="font-bold mb-2">AI Chandamama Kathalu</h3>
        <p class="text-muted">First Small Language Model for Indic language story generation</p>
      </div>
      <div class="text-center">
        <div class="text-4xl font-bold text-primary mb-2">S</div>
        <h3 class="font-bold mb-2">Swecha AI OS</h3>
        <p class="text-muted">First AI-enabled open source operating system</p>
      </div>
    </div>
  </div>

  <!-- Our Impact -->
  <Stats
    title="Our Impact"
    stats={[
      {
        title: 'Contributors',
        amount: '45K+',
      },
      {
        title: 'Voice Samples',
        amount: '1.5M+',
      },
      {
        title: 'Trained Teachers',
        amount: '500+',
      },
      {
        title: 'Story Contributors',
        amount: '10K+',
      },
    ]}
  />

  <!-- Focus Areas -->
  <Features
    title="Our Focus Areas"
    items={focusAreas}
  />

  <!-- Footer Note -->
  <div class="text-center py-8 text-sm text-muted">
    <p>VISWAM.ai - Pronounced 'viswamayee'</p>
    <p>Venture for Innovation and Social Wellbeing through AI for the Marginalised</p>
    <p>A Joint Initiative of Swecha and IIIT Hyderabad</p>
  </div>
</Layout>