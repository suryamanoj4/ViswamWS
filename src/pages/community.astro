---

<Layout metadata={metadata}>
  <Hero
    title="Community Projects"
    subtitle="Building a sustainable AI ecosystem through community engagement"
    image={{
      src: '~/assets/images/community-hero.jpg',
      alt: 'Community Projects Hero Image',
    }}
  />

  {Object.entries(projects).slice(0, 3).map(([key, section]) => (
    <section class="py-16 bg-gray-50" id={key}>
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-2">{section.title}</h2>
        <p class="text-xl text-gray-600 text-center mb-12">{section.subtitle}</p>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {section.projects?.map((project) => (
            <ProjectCard
              name={project.name}
              timeline={project.timeline}
              status={project.status}
              description={project.description}
              icon={project.icon}
              outcomes={project.outcomes}
              plans={project.plans}
              metrics={project.metrics}
            />
          ))}
        </div>
      </div>
    </section>
  ))}

  <section class="py-16 bg-white" id="impact">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-2">{projects.impact.title}</h2>
      <p class="text-xl text-gray-600 text-center mb-12">{projects.impact.subtitle}</p>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {projects.impact.metrics.map((category) => (
          <div class="border rounded-lg p-6 shadow-sm">
            <h3 class="text-xl font-semibold mb-6">{category.category}</h3>
            <div class="space-y-6">
              {category.stats.map((stat) => (
                <div>
                  <div class="flex justify-between items-center mb-2">
                    <span class="text-gray-600">{stat.label}</span>
                    <span class="text-green-500 text-sm">{stat.growth}</span>
                  </div>
                  <div class="text-2xl font-bold">{stat.value}</div>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-8">Get Involved</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="p-6 border rounded-lg shadow-sm bg-white">
          <Icon name="tabler:user-plus" class="w-12 h-12 mx-auto mb-4 text-primary" />
