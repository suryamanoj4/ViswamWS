---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import Features from '~/components/widgets/Features.astro';
import Stats from '~/components/widgets/Stats.astro';

const metadata = {
    title: 'In the News',
    description: 'How Viswam AI has been working behind to be COE of AI for Global South',
};

const ainews = [
    {
        title: 'OpenAi Releases GPT-5',
        description: 'OpenAI has unveiled GPT-5,featuring enhanced reasoning and multimodel capabilities. Learn how this update could revolutionize industries.',
        link: 'https://www.forbes.com/sites/bernardmarr/2025/02/19/openais-gpt-5-is-coming-heres-what-we-know-so-far/',
    },
    {
        title: 'Google DeepMind AI: An Weather Wizard',
        description: 'A new AI model from DeepMind is outperforming traditional weather forecasting methods, offering predictions up to 10 days in advance.',
        link: 'https://deepmind.google/technologies/weathernext/',
    },
    {
        title: 'AI Ethics in Focus: EU Passes Stricter Regulations',
        description: 'The European Union has introduced new AI regulations to ensure transparency and accountanility in AI systems.',
        link: 'https://digital-strategy.ec.europa.eu/en/policies/regulatory-framework-ai',
    },
];
---

<Layout metadata={metadata}>
    <Hero
        title="In the News"
    >
        <Fragment slot="subtitle">
            How Viswam AI has been working with various of its collaborators to speed up the process of making viswan a COE for the AI innovation wave in south for GLobal South
        </Fragment>
    </Hero>

    <div class="max-w-6xl mx-auto px-4 py-16 lg:px-8">
    <h2 class="text-3xl font-bold mb-8 text-center">AI News</h2>
        <div class="space-y-8">
            {ainews.map(news => (
                <div>
                    <h3 class="font-bold text-xl mb-2">{news.title}</h3>
                    <p class="text-muted">{news.description}<a href={news.link}><i>Read more...</i></a></p>
                </div>
                ))}
            </div>
    </div>

    <div class="max-w-6xl mx-auto px-4 py-16 lg:px-8">
    <h2 class="text-2xl font-bold mb-4 text-center">In the News</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {ainews.map(news => (
        <div class="bg-white rounded-2xl shadow-md p-4 hover:shadow-lg transition-shadow">
            <!- <img src="news-image1.jpg" alt="News 1" class="w-full h-48 object-cover rounded-xl mb-4"> ->
            <h3 class="text-xl font-semibold mb-2">{news.title}</h3>
            <p class="text-gray-600">{news.description}</p>
            <a href={news.link} class="text-blue-500 hover:underline mt-2 inline-block">Read more</a>
        </div>
        ))}
    </div>
    </div>

    <div class="text-center py-8 text-sm text-muted">
    <p>VISWAM.ai - Pronounced 'viswamayee'</p>
    <p>Venture for Innovation and Social Wellbeing through AI for theÂ Marginalised</p>
    <p>A Joint Initiative of Swecha and IIIT Hyderabad</p>
    </div>
</Layout>
