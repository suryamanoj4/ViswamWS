---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import Features from '~/components/widgets/Features.astro';
import Stats from '~/components/widgets/Stats.astro';
import { Image } from 'astro:assets';
import hack from '../assets/images/hack.png';

const metadata = {
    title: 'Activities',
    description: 'Various activities conducted by Viswan AI such as conferences, hackatons and so on.',
};


const themes = [
  {
    title: 'Creative Art',
    description: 'Exploring AI in digital art, music generation, design automation, and creative content production',
    icon: 'tabler:palette',
  },
  {
    title: 'Education AI',
    description: 'Revolutionizing learning through personalized AI tutoring, adaptive assessments, and intelligent content delivery systems',
    icon: 'tabler:school',
  },
  {
    title: 'Agriculture AI',
    description: 'Transforming farming with precision agriculture, crop monitoring, and sustainable farming practices powered by AI',
    icon: 'tabler:plant',
  },
  {
    title: 'Healthcare AI',
    description: 'Advancing medical diagnostics, patient care, and healthcare management with cutting-edge AI solutions',
    icon: 'tabler:activity',
  },
];

---
<Layout metadata={metadata}>
    <Hero
        title="AI HackDay 2025"
    >
        <Fragment slot="subtitle">
        A national-level hackathon designed to inspire the brightest minds to harness the power of Artificial Intelligence to tackle real-world challenges. This event brings together students, industry experts, and cutting-edge AI tools in a collaborative space where innovation meets impact
        </Fragment>
    </Hero>

    <Image src={hack} alt="Hackathon image" style={{width: "100%"}} />


    <Stats
    title="Insights"
    stats={[
      { title: 'Colleges', amount: '25+' },
      { title: 'Projects', amount: '750+' },
      { title: 'Participants', amount: '2500+' },
      { title: 'Mentors', amount: '100+' },
      { title: 'Academicians', amount: '100+' },
    ]}
    />


  <Features
      title="Project Themes"
      items={themes}
  />

</Layout>
