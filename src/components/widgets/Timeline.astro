---

<script>
  // Optional: Add any client-side interactions here
</script>

<div class="mx-auto max-w-6xl px-4 py-16 lg:px-8 lg:py-20">
  <div class="mb-10 md:mx-auto md:mb-12 text-center">
    <slot name="title">
      <h2 class="font-bold leading-tighter tracking-tighter font-heading text-heading text-3xl md:text-4xl">
        <slot>{title}</slot>
      </h2>
    </slot>
    {subtitle && 
      <p class="mt-4 text-muted text-xl">
        {subtitle}
      </p>
    }
  </div>
  <div class="relative">
    {/* Vertical line */}
    <div class="absolute left-1/2 transform -translate-x-1/2 w-0.5 h-full bg-gray-200 dark:bg-gray-700"></div>
    
    <div class="relative">
      {items.map((item, index) => (
        <div class={`mb-12 flex justify-between items-center w-full ${index % 2 === 0 ? 'flex-row-reverse' : ''}`}>
          <div class="w-5/12"></div> {/* Spacer */}
          
          {/* Timeline point */}
          <div class="absolute left-1/2 transform -translate-x-1/2 w-4 h-4 rounded-full bg-primary border-4 border-primary-50"></div>
          
          {/* Content */}
          <div class="w-5/12 bg-white dark:bg-slate-900 p-6 rounded-lg shadow-md">
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">
              {item.title}
            </h3>
            <p class="text-muted">
              {item.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</div>