---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import Features from '~/components/widgets/Features.astro';
import Stats from '~/components/widgets/Stats.astro';

const metadata = {
    title: 'Activities',
    description: 'Various activities conducted by Viswan AI such as conferences, hackatons and so on.',
};

const activities = [
    {
        title: 'AI Days',
        description: 'AI Days 2025 is being organized by Viswam.AI, a joint initiative by IIIT Hyderabad and Swecha, focusing on building foundational AI technologies for the Global South. AI Days aims to bring together experts and institutions from Industry, Academia, Startups and Government who work on a shared goal of people-centric AI. We envision the conference as the melting pot for breakthrough advancements in tech, policy, art and more avenues centred around responsible AI.',
        link: 'https://aidays.io/',
        image: 'https://aidays.io/_next/image?url=%2Fimages%2Fabout-0.jpeg&w=1920&q=75',
    },
];
---
<Layout metadata={metadata}>
    <Hero
        title="Activities"
    >
        <Fragment slot="subtitle">
            Activities hosted by Viswam AI in collaboration with various orgs such as swecha and IIIT-H
        </Fragment>
    </Hero>

    <div class="max-w-6xl mx-auto px-4 py-16 lg:px-8">
    <h2 class="text-2xl font-bold mb-4 text-center">Activities</h2>
        {activities.map(acts => (
        <a href={acts.link} class="block rounded-2xl overflow-hidden shadow-md hover:shadow-lg transition-shadow">
        <div class="h-80 bg-cover bg-center" style={{backgroundImage: `url(${acts.image})`}}>
            <div class="bg-black bg-opacity-50 text-white p-4 h-full flex flex-col justify-center items-center">
                <h2 class="font-bold text-xl mb-2">{acts.title}</h2>
                <p class="text-muted">{acts.description}</p>
            </div>
            </div>
        </div>
        </a>
        ))}
    </div>

    <div class="text-center py-8 text-sm text-muted">
    <p>VISWAM.ai - Pronounced 'viswamayee'</p>
    <p>Venture for Innovation and Social Wellbeing through AI for theÂ Marginalised</p>
    <p>A Joint Initiative of Swecha and IIIT Hyderabad</p>
    </div>
</Layout>
