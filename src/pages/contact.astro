---
// src/pages/contact.astro
import Layout from '~/layouts/PageLayout.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features from '~/components/widgets/Features.astro';

const metadata = {
  title: 'Contact Us',
  description: 'Get in touch with VISWAM.ai',
};
---

<Layout metadata={metadata}>
  <ContactUs
    title="Get in Touch"
    subtitle="Join us in our mission to democratize AI for the Global South"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Message',
    }}
    disclaimer={{
      label: 'By submitting this contact form, you agree to our privacy policy.',
    }}
  />

  <Features
    title="Ways to Get Involved"
    items={[
      {
        title: 'Researchers',
        description: 'Collaborate on AI research projects',
        icon: 'tabler:books',
      },
      {
        title: 'Developers',
        description: 'Contribute to our open source projects',
        icon: 'tabler:code',
      },
      {
        title: 'Students',
        description: 'Join our internship programs',
        icon: 'tabler:school',
      },
      {
        title: 'Industry Partners',
        description: 'Partner with us for AI innovation',
        icon: 'tabler:building',
      },
    ]}
  />
</Layout>